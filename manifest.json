{
    "manifest_version": 3,
    "name": "Medical Notetaking for ePuskesmas",
    "version": "2.1.0",
    "description": "Advanced medical audio recording, transcription, and AI-powered summarization for healthcare professionals",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://api.openai.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html"
}
  